include ../airdatepicker/airdatepicker.pug
mixin calculator(roomNumber, pricePerDay, day, checkin, checkout, titleDropdown, calculationOfThePrice, fullPrice, tax, addTax, additionalTax, totalPrice )
    .calculator
        .calculator__container
            .flex-row
                p(class='calculator__room') 
                    span(class='calculator__room room__symbol') &#8470;
                    span(class='calculator__room room__number')= roomNumber
                p(class='calculator__room room__price')= pricePerDay
                    span= day
            .row.calculator__title_datepicker
                p(class='title')= checkin
                p(class='title calculator__title_datepicker_checkout')= checkout
            div(class='calculator__datepicker')
                +datepicker
            p(class='title')= titleDropdown
            .calculator__dropdown
                +dropdown( {id: 'dd-text', name: 'Сколько гостей'}, { name:'Взрослые', number: 'adult_text', plus: 'adult_plus', minus: 'adult_minus'},  {name: 'Дети', number: 'child_text', plus: 'child_plus', minus: 'child_minus' }, {name: 'Младенцы', number: 'baby_text', plus: 'baby_plus', minus: 'baby_minus'})
            .flex-row.calculator__count
                .flex-row.count__price
                    p= calculationOfThePrice
                    p= fullPrice
            .flex-row.calculator__count
                .row
                    p= tax
                    div
                        span.count__info i
                p 0P
            .flex-row.calculator__count
                .row
                    p(style='white-space:pre;')= addTax
                    div
                        span.count__info.count__info_extra i
                p= additionalTax
            h3(class='calculator__total-price')= totalPrice
            button(type='button' class='btn btn-confirm') Забронировать
                


            