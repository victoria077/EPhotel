mixin little-dropdown(title,  subtitle1,  subtitle2,  subtitle3) 
  label(class='little-dd')
    div(class='little-dd__item' id= title.id)= title.name
    input(type='checkbox' class='little-dd__input' id='test')
    ul(class='little-dd__menu')
      li(class='little-dd__row')
        p(class='little-dd__title')= subtitle1.name
        div(class='little-dd__wrapper')
          button(class='little-dd__button' id= subtitle1.plus) +
          p(class='little-dd__text' id= subtitle1.number) 0
          button(class='little-dd__button' id= subtitle1.minus) -
      li(class='little-dd__row')
        p(class='little-dd__title')= subtitle2.name
        div(class='little-dd__wrapper')
          button(class='little-dd__button' id= subtitle2.plus) +
          p(class='little-dd__text' id= subtitle2.number) 0
          button(class='little-dd__button' id= subtitle2.minus) -
      li(class='little-dd__row')
        p(class='little-dd__title')= subtitle3.name
        div(class='little-dd__wrapper')
          button(class='little-dd__button' id= subtitle3.plus) +
          p(class='little-dd__text' id= subtitle3.number) 0
          button(class='little-dd__button' id= subtitle3.minus) -
      li(class='little-dd__row')
          button(class='little-dd__clean' id='clean') Очистить
          button(class='little-dd__apply' id='apply') Применить  