                div(class='sidebar__checkbox')
                    +checkbox({name:'Smoking', label: 'Можно курить', nameClass: 'sidebar__checkbox'})
                    +checkbox({ name:'Pets', label:'Можно с питомцами', nameClass: 'sidebar__checkbox'})
                    +checkbox({name:'Guests',  label:'Можно пригласить гостей (до 10 человек)'})
