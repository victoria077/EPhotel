mixin header(links)
  div(class='header')
    div(class='header__container')
      div(id='logo' class='logo')
      div(class='menu')
        label(for='drop' class='menu_toggle') 
          i(class='fa fa-bars' aria-hidden='true')
        input(type='checkbox' class='menu_drop' id='drop')
        ul(class='menu__nav')
          each i in links
            li(class='menu__item')
              a(class='menu__link')= i
          if block
            block

