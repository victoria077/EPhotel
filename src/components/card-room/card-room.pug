mixin card-room(slickName, imgList, number, price, day, feedback, textFeedback, className)
    div(class= className, class='card')
      a(href="info-page.html")
        .carousel-container
          div(class= slickName)
              input(type='radio' id= slickName + '-1' name='carousel[]' checked)
              input(type='radio' id= slickName + '-2' name='carousel[]')
              input(type='radio' id= slickName + '-3' name='carousel[]')
              input(type='radio' id= slickName + '-4' name='carousel[]')
              ul(class= slickName + '__items')
                each img in imgList
                  li(class= slickName + '__item')
                    img(src= img class="card__img")
              .carousel__prev
                label(for= slickName + '-1')
                label(for= slickName + '-2')
                label(for= slickName + '-3')
                label(for= slickName + '-4')
              .carousel__next
                label(for= slickName + '-1')
                label(for= slickName + '-2')
                label(for= slickName + '-3')
                label(for= slickName + '-4')
              .carousel__nav
                label(for= slickName + '-1')
                label(for= slickName + '-2')
                label(for= slickName + '-3')
                label(for= slickName + '-4')
        div(class='card__container')
            div(class='flex-row')
                p(class='card__number') 
                    span(class='card__number_symbol') &#8470; 
                    span=  number
                p(class='card__price')= price  
                    span(class='card__price_per-day')= day
            div(class='card__line')
            div(class='flex-row')
              if block
                block
              p(class='card__feedback')= feedback
                    span= textFeedback