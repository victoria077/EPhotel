- blocks = {}
mixin set(key)
  - blocks[key] = this.block 
mixin card-room(slickName, imgList, number, price, day, feedback, textFeedback, className)
    div(class= className, class='card')
      a(href="info-page.html" class="carousel")
        div(class='carousel__container')
          div(class= slickName)
              input(type='radio' id= slickName + '-1' name='carousel[]' checked)
              input(type='radio' id= slickName + '-2' name='carousel[]')
              input(type='radio' id= slickName + '-3' name='carousel[]')
              input(type='radio' id= slickName + '-4' name='carousel[]')
              ul(class= slickName + '__items')
                each img in imgList
                  li(class= slickName + '__item')
                    img(src= img class="carousel__img")
              .carousel__prev
                label(for= slickName + '-1')
                label(for= slickName + '-2')
                label(for= slickName + '-3')
                label(for= slickName + '-4')
              .carousel__next
                label(for= slickName + '-1')
                label(for= slickName + '-2')
                label(for= slickName + '-3')
                label(for= slickName + '-4')
              .carousel__nav
                label(for= slickName + '-1')
                label(for= slickName + '-2')
                label(for= slickName + '-3')
                label(for= slickName + '-4')
      div(class='description')
        div(class='description__container')
              div(class='description__wrap')
                  p(class='description__number') 
                      span(class='description__symbol') &#8470; 
                      span=  number
                      div(class='description__luxe')
                        if blocks.luxe
                          - blocks.luxe()
                        else
                  p(class='description__price')= price  
                      span(class='description__per-day')= day
              div(class='description__line')
              div(class='description__wrap')
                if block 
                  block 
                p(class='description__feedback')= feedback
                  span(class='description__text')= textFeedback


